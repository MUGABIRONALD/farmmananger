doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Director Dashboard | KGL
  // Font Awesome
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css' rel='stylesheet')
  // Google Fonts
  link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap' rel='stylesheet')
  // BootStrap
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css')
  // MDB
  link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css' rel='stylesheet')
  // Personal CSS
  link(rel='stylesheet' href='style.css')
  
  script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js')
  script(src='dirsales.js')

// Main Navigation
header
  // Navbar
  nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top(style='background-color: #812c13;')
    // Container wrapper
    .container-fluid
      // Toggle button
      button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        i.fas.fa-bars
      // Collapsible wrapper
      #navbarSupportedContent.collapse.navbar-collapse
        // Navbar brand
        a.navbar-brand.mt-2.mt-lg-0(href='#')
          img(src='./images/KGLogo.svg' height='20' alt='KGL Logo' loading='lazy')
        // Left links
        ul.navbar-nav.me-auto.mb-3.mb-lg-0
          li.nav-item
            a.nav-link(href='#') Dashboard
        // Left links
      // Collapsible wrapper
      // Right elements
      .d-flex.align-items-center
        // Avatar
        .dropdown
          a#navbarDropdownMenuAvatar.dropdown-toggle.d-flex.align-items-center.hidden-arrow(href='#' role='button' data-mdb-toggle='dropdown' aria-expanded='false')
            img.rounded-circle(src='https://mdbcdn.b-cdn.net/img/new/avatars/2.webp' height='25' alt='Black and White Portrait of a Man' loading='lazy')
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdownMenuAvatar')
            li
              a.dropdown-item(href='#') Logout
      // Right elements
    // Container wrapper
  // Navbar
// Main Navigation
// Main layout
main
  // Cards
  .row
    .col-xl-6.col-12.mb-3
      .card
        .card-body
          .d-flex.justify-content-between.px-md-1
            .align-self-center
              i.fas.fas.fa-cart-plus.text-info.fa-3x
            .text-end
              h3 Produce Details
              a.btn.btn-info.mb-3 View Procurements
    .col-xl-6.col-12.mb-3
      .card
        .card-body
          .d-flex.justify-content-between.px-md-1
            .align-self-center
              i.fas.fa-cash-register.text-success.fa-3x
            .text-end
              h3 Sales
              a.btn.btn-success.mb-3 View Sales
    .col-xl-6.col-12.mb-3
      .card
        .card-body
          .d-flex.justify-content-between.px-md-1
            .align-self-center
              i.fas.fa-credit-card.text-warning.fa-3x
            .text-end
              h3 Deferred Sales
              a.btn.btn-warning.mb-3 View Sales on Credit
    .col-xl-6.col-12.mb-3
      .card
        .card-body
          .d-flex.justify-content-between.px-md-1
            .align-self-center
              i.fas.fa-users.text-info.fa-3x
            .text-end
              h3 Users
              .d-flex.flex-column.flex-md-row
                button.btn.btn-info.me-md-2.mb-3(data-mdb-toggle='modal' data-mdb-target='#newuser')
                  | Add
                  | new Users
                a.btn.btn-info.mb-3 View Users
  // Modals
  // Users Modal
  #newuser.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog.modal-dialog-scrollable.modal-dialog-centered.modal-lg
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title
            | Add User
          button.btn-close(type='button' data-mdb-dismiss='modal' aria-label='Close')
        .modal-body
          form(name='register')
            .row
              #first-name.col-md-6.mb-2
                .form-floating
                  input.form-control.form-control-lg(type='text' name='firstname' placeholder='' required='' onblur='fNameVal(2,15)')
                  label.form-label(for='firstname') First Name
              #last-name.col-md-6.mb-2
                .form-floating
                  input#lastname.form-control.form-control-lg(type='text' placeholder='' required='' onblur='lNameVal(2,15)')
                  label.form-label(for='lastname') Last Name
            .row
              #user-role.col-12.col-md-4.mb-2
                div
                  label.form-label(for='role') Role:
                  select.form-select(name='role' onblur='roleVal()' required='')
                    option(value='' selected='') Select Role
                    option(value='Manager') Manager
                    option(value='Sales Agent') Sales Agent
              #user-branch.col-12.col-md-4.mb-2
                div
                  label.form-label(for='branch') Branch:
                  select.form-select(name='branch' onblur='branchVal()' required='')
                    option(value='' selected='') Select Branch
                    option(value='Mattuga') Mattuga
                    option(value='Sales Agent') Maganjo
              .col-md-4.mb-2
                label(for='gender') Gender:
                .form-check
                  input#femaleGender.form-check-input(type='radio' name='gender' value='Female' checked='')
                  label.form-check-label(for='femaleGender') Female
                .form-check.form-check-inline
                  input#maleGender.form-check-input(type='radio' name='gender' value='Male')
                  label.form-check-label(for='maleGender') Male
            .row
              .col-md-6.mb-2.pb-2
                .form-floating
                  input.form-control.form-control-lg(type='email' name='email' placeholder='' required='')
                  label.form-label(for='email') Email
              #tel-no.col-md-6.mb-2.pb-2
                .form-floating
                  input.form-control.form-control-lg(type='tel' name='telno' pattern='[0]{1}[0-9]{9}' placeholder='0701234567' required='' onblur='telNoVal()')
                  label.form-label(for='telno') Contact
            .row
              #pwd.col-md-6.mb-2.pb-2
                .form-floating
                  input#password.form-control.form-control-lg(type='password' placeholder='' required='' onblur='pwdVal(6)')
                  label.form-label(for='password') Password
              #pwd-conf.col-md-6.mb-2.pb-2
                .form-floating
                  input.form-control.form-control-lg(type='password' name='passconf' placeholder='' required='' onblur='confPwd()')
                  label.form-label(for='passconf') Confirm Password
        .modal-footer
          button.btn.btn-outline-danger(type='button' data-mdb-dismiss='modal')
            | Close
          button.btn.btn-secondary(type='button')
            | Save User
  // Modals - end
